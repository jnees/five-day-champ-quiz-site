<%- include("header") %>
<%- include("navbar") %>

<div id="main" class="container">


<!-- Clue -->
  <div class="container">
    <div class="card clue">
      <div class="card-body">
        <h1 class="card-title"><%= foundClues.category.replace(/\\/g, "") %></h1>
        <p class="card-text"><%= foundClues.answer.replace(/\\/g, "") %></p>
        <h6 id="question" class="card-subtitle mb-2"><%= foundClues.question.replace(/\\/g, "") %></h6>
      </div>
    </div>
  </div>

<!-- User Inputs --->
  <div class="container">
    <button onClick="showQuestion()" class="btn btn-outline-primary control-button" type="button">Show Answer</button>

    <div class="container row buttonRow">
      <div class="col sm">
        <form class="answer-form" action="/response" method="POST">
          <input type="hidden" name="round" value="<%= foundClues.round %>">
          <input type="hidden" name="value" value="<%= foundClues.value %>">
          <input type="hidden" name="daily_double" value="<%= foundClues.daily_double %>">
          <input type="hidden" name="comments" value="<%= foundClues.comments %>">
          <input type="hidden" name="category" value="<%= foundClues.category %>">
          <input type="hidden" name="answer" value="<%= foundClues.answer %>">
          <input type="hidden" name="question" value="<%= foundClues.question %>">
          <input type="hidden" name="air_date" value="<%= foundClues.air_date %>">
          <input type="hidden" name="correct" value=0>
          <button class="btn btn-danger control-button incorrect" type="submit"><i class="fa fa-times"></i></button>
        </form>
      </div>
      <div class="col sm">
        <form class="answer-form" action="/response" method="POST">
          <input type="hidden" name="round" value="<%= foundClues.round %>">
          <input type="hidden" name="value" value="<%= foundClues.value %>">
          <input type="hidden" name="daily_double" value="<%= foundClues.daily_double %>">
          <input type="hidden" name="comments" value="<%= foundClues.comments %>">
          <input type="hidden" name="category" value="<%= foundClues.category %>">
          <input type="hidden" name="answer" value="<%= foundClues.answer %>">
          <input type="hidden" name="question" value="<%= foundClues.question %>">
          <input type="hidden" name="air_date" value="<%= foundClues.air_date %>">
          <input type="hidden" name="correct" value=1>
          <button class="btn btn-success control-button correct" type="submit"><i class="fa fa-check"></i></button>
        </form>
      </div>
    </div>

  </div>

</div>

<%- include("footer") %>
